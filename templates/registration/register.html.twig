{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            {{ form(form) }}
            {% if errors is defined %}
                <h3>The user has the following errors</h3>
                <ul>
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}