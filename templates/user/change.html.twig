{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form.email, { 'attr': {'style': 'display: none'} }) }}
            {{ form_widget(form.username, { 'attr': {'style': 'display: none'} }) }}
            {{ form_widget(form.firstname, { 'attr': {'style': 'display: none'} }) }}
            {{ form_widget(form.lastname, { 'attr': {'style': 'display: none'} }) }}
            {{ form_widget(form.phone, { 'attr': {'style': 'display: none'} }) }}
            {{ form_row(form.plainPassword) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}