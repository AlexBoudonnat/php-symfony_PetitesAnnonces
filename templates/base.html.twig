<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header class="container">
            <div class="row">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="col"><a href="{{ url("app_home") }}">Home</a></div>
                    <div class="col"><a href="{{ url("product.all") }}">All Products</a></div>
                    <div class="col"><a href="{{ url("product.add") }}">Add Product</a></div>
                    <div class="col"><a href="{{ url("logout") }}">Logout</a></div>
                {% else %}
                    <div class="col-2"><a href="{{ url("login") }}">Login</a></div>
                    <div class="col-2"><a href="{{ url("user.register") }}">Register</a></div>
                    <div class="col-2"><a href="{{ url("product.all") }}">All Products</a></div>
                {% endif %}
            </div>
        </header>
        <hr/>
        {% block body %}{% endblock %}
        <hr/>
        <footer class="container">
            <div class="row">
                <div class="col">
                    &copy; AlexB Company
                </div>
            </div>
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
</html>
