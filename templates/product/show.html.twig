{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Release On</th>
                    <th>Action</th>
                </tr>
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.releaseOn|date }}</td>
                    <td>
                        <a onclick="return confirm('are you sure?');" href="{{ url("product.update", {"product":product.id}) }}">Update</a> |
                        <a onclick="return confirm('are you sure?');" href="{{ url("product.delete", {"product":product.id}) }}">Delete</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}